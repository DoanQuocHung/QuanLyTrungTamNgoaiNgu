@page
@model WebForm.Pages.Shared.GiayChungNhanModel
@{
    ViewData["Title"] = "Website Quản Lý Trung Tâm Ngoại Ngữ";
    Layout = "_Layout";
}
@using BUS;
@using DTO;
@using Microsoft.AspNetCore.Http;
@{

}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Giấy Chứng Nhận Kết Quả Thi</h4>
                        <form class="forms-sample" method="post">
                            <label for="exampleInputName1">Tiếng Anh trình độ 10</label>
                            <div class="form-group">
                                <label for="exampleInputName1">Họ tên</label>
                                <input type="text" class="form-control" placeholder="Họ tên" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ngày sinh</label>
                                <input type="date" required class="form-control" placeholder="Ngày sinh" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Nơi sinh</label>
                                <input type="text" class="form-control" placeholder="Nơi sinh" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ký tên</label>
                                <img src="~/images/Signature.png" />
                            </div>
                            <input type="submit" value="Đăng ký" class="btn btn-primary mr-2" />
                        </form>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
