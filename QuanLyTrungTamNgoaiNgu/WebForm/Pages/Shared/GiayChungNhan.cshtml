@page
@model WebForm.Pages.Shared.GiayChungNhanModel
@{
    ViewData["Title"] = "Website Quản Lý Trung Tâm Ngoại Ngữ";
    Layout = "_Layout";
}
@using BUS;
@using DTO;
@using Microsoft.AspNetCore.Http;
@using Newtonsoft.Json;
@{
    ThiSinhDTO khoa = new ThiSinhBUS().List().Last<ThiSinhDTO>();
    var str = HttpContext.Session.GetString("giaychungnhan");
    var obj = JsonConvert.DeserializeObject<ThiSinhDTO>(str);
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Giấy Chứng Nhận Kết Quả Thi</h4>
                        <form class="forms-sample" method="post">
                            <label for="exampleInputName1">Tiếng Anh trình độ 10</label>
                            <div class="form-group">
                                <label for="exampleInputName1">Họ tên: </label>
                                <label for="exampleInputName1" value="@obj.HoTen_TS"></label>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ngày sinh: </label>
                                <label for="exampleInputName1" value="@obj.NgaySinh_TS"></label>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Nơi sinh: </label>
                                <label for="exampleInputName1" value="@obj.NoiSinh_TS"></label>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputName1">Ký tên</label>
                                <img src="~/images/Signature.png" />
                            </div>
                            <input type="submit" value="Xác nhận" class="btn btn-primary mr-2" />
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
