@page
@model WebForm.Pages.Shared.QuanLyKhoaThiModel
@{
    ViewData["Title"] = "Website Quản Lý Trung Tâm Ngoại Ngữ";
    Layout = "_Layout";
}
@using BUS;
@using DTO;
@using Microsoft.AspNetCore.Http;
@{
    List<KhoaThiDTO> list = new List<KhoaThiDTO>();
    KhoaThiBUS bus = new KhoaThiBUS();
    list = new KhoaThiBUS().List();
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Danh sách Khóa Thi</h4>

                        <form class="form-inline" method="post">
                            <input type="submit" class="btn btn-warning" value="Tìm" style="margin-left:">
                            <input type="text" class="form-control mb-2 mr-sm-2" style="margin-left:" placeholder="...">
                        </form>
                        <input type="submit" class="btn btn-success" value="Thêm" />
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>Mã khoá thi</th>
                                        <th>Tên khoá thi</th>
                                        <th>Ngày thi</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        foreach (KhoaThiDTO item in list)
                                        {

                                            <tr>
                                                <td>@item.Id_KhoaThi</td>
                                                <td>@item.Ten_KhoaThi</td>
                                                <td>@item.NgayThi</td>
                                                <td>
                                                    <input type="submit" class="btn btn-warning" value="Sửa" />
                                                    <input type="submit" class="btn btn-danger" value="Xóa" />
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>